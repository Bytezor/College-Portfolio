<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/selectionFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.calculator.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/selectionFragment"
        android:name="com.example.calculator.SelectionFragment"
        android:label="fragment_selection"
        tools:layout="@layout/fragment_selection" >
        <action
            android:id="@+id/action_selectionFragment_to_calcFragment"
            app:destination="@id/calcFragment" />
        <action
            android:id="@+id/action_selectionFragment_to_contactFragment"
            app:destination="@id/contactFragment" />
    </fragment>
    <fragment
        android:id="@+id/calcFragment"
        android:name="com.example.calculator.CalcFragment"
        android:label="CalcFragment" >
        <action
            android:id="@+id/action_calcFragment_to_selectionFragment"
            app:destination="@id/selectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.calculator.ContactFragment"
        android:label="fragment_contact"
        tools:layout="@layout/fragment_contact" >
        <action
            android:id="@+id/action_contactFragment_to_selectionFragment"
            app:destination="@id/selectionFragment" />
    </fragment>
</navigation>